<% if signed_in? %>
  <%= form_for current_user.favorites.new(talk: @talk),
               html: { class: 'inline' },
               remote: true do |f| %>
    <%= f.hidden_field :talk_id %>
    <%= f.button :submit, class: 'btn btn-default favorite' do %>
      <i class='icon icon-heart quiet pad0r'></i><span id='favorite-count'><%= @talk.favorites.size %></span>
    <% end %>
  <% end %>
<% else %>
  <a href='#fakelink' class='btn btn-default favorite'>
    <i class='icon icon-heart quiet pad0r'></i><span id='favorite-count'><%= @talk.favorites.size %></span>
  </a>
<% end %>
