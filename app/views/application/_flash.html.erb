<% if flash.alert %>
  <div class='alert alert-danger pad3x'>
    <button type='button' class='close' data-dismiss='alert'>
      <span>&times;</span>
    </button>
    <p>
      <i class='icon icon-fire pad0r'></i><%= flash.alert %>
    </p>
  </div>
<% end %>

<% if flash.notice %>
  <div class='alert alert-success pad3x'>
    <button type='button' class='close' data-dismiss='alert'>
      <span>&times;</span>
    </button>
    <p>
      <i class='icon icon-thumbs-up pad0r'></i><%= flash.notice %>
    </p>
  </div>
<% end %>
