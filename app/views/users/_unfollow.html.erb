<%= form_for(current_user.active_relationships.find_by_followed_id(user),
             html: {
               method: :delete,
               data: {
                 user_id: dom_id(user),
                 current_user_id: dom_id(current_user),
                 action: 'unfollow'
               }
             },
             remote: true) do |f| %>
   <%= f.button :submit, class: 'btn btn-default' do %>
    <i class='icon icon-minus pad0r' style='margin-top: -2px;'></i>Unfollow
  <% end %>
<% end %>
