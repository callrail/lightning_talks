<%= form_for(current_user.active_relationships.build(followed_id: user.id),
             html: {
               data: {
                 user_id: dom_id(user),
                 current_user_id: dom_id(current_user),
                 action: 'follow'
               }
             },
             remote: true) do |f| %>
  <div>
    <%= f.hidden_field :followed_id %>
  </div>
  <%= f.button :submit, class: 'btn btn-primary' do %>
    <i class='icon icon-plus pad0r' style='margin-top: -2px;'></i>Follow
  <% end %>
<% end %>
