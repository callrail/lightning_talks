<% if params[:page] %>
  $('.tab-content .users').append("<%=j render @users %>")
  $('.load-more').replaceWith("<%=j load_more @users, following_user_path(@user, page: @users.next_page) %>")
<% else %>
  $('.tab-content').html("<%=j render 'following', collection: @users %>")
  $('.tabs .tab-link').removeClass('active')
  $('.tabs [data-tab="following"]').addClass('active')
<% end %>
