<%= currently_at 'User' %>

<header class='inset-header dark profile'>
  <div class='container-fluid contain clearfix'>
    <div class='media contain member-profile'>
      <%= link_to @user, class: 'media-left pad1r' do %>
        <%= avatar_for @user, class: 'img-rounded', width: 130 %>
      <% end %>
      <div class='media-body pad1l'>
        <h1>
          <%= @user.full_name %><span class='badge fill-lighten0 dark small pad1x round inline'>speaker</span>
        </h1>
        <p class='lead quiet'>Product designer at Bluth Company</p>
        <ul class='stats'>
          <li class='inline hidden-xs'>
            <%= link_to '#fakelink', class: 'block pad2r text-default', 
                        data: { toggle: 'tab', href: user_path(@user),
                        remote: true } do %>
              <strong class='block space-bottom0'>15</strong>
              <small class='quiet'>Talks</small>                
            <% end %>
          </li>
          <li class='inline'>
            <%= link_to '#fakelink', 
                        class: 'block pad2x keyline-left text-default followers',
                        data: { toggle: 'tab', href: followers_user_path(@user) },
                        remote: true do %>
              <strong class='block space-bottom0'>26</strong>
              <small class='quiet'>Followers</small>
            <% end %>
          </li>
          <li class='inline'>
            <%= link_to '#fakelink', 
                        class: 'block pad2x keyline-left text-default',
                        data: { toggle: 'tab', href: following_user_path(@user) },
                        remote: true do %>
              <strong class='block space-bottom0'>5</strong>
              <small class='quiet'>Following</small>
            <% end %>
          </li>
          <li class='inline hidden-xs'>
            <%= link_to '#fakelink', 
                        class: 'block pad2x keyline-left text-default',
                        data: { toggle: 'tab', href: favorites_user_path(@user) },
                        remote: true do %>
              <strong class='block space-bottom0'>33</strong>
              <small class='quiet'>Favorites</small>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <ul class='actions pin-bottomright'>
      <li>
        <%= link_to '#fakelink', class: 'btn btn-primary' do %>
          <i class='icon icon-plus pad0r' style='margin-top: -2px;'></i>Follow
        <% end %>
      </li>
    </ul>
  </div>
</header>

<div class='container-fluid contain'>
  <nav class='space-bottom4 dark tabs'>
    <%= tab_link 'Talks', '#fakelink', class: 'active', remote: true,
                 data: { toggle: 'tab', href: user_path(@user) } %>
    <%= tab_link 'Favorites', '#fakelink', remote: true,
                 data: { toggle: 'tab', href: favorites_user_path(@user) } %>
    <%= tab_link 'Activity', '#fakelink', remote: true,
                 data: { toggle: 'tab', href: activity_user_path(@user) } %>
    <%= tab_link 'Followers', '#fakelink', remote: true,
                 data: { toggle: 'tab', href: followers_user_path(@user) } %>
    <%= tab_link 'Following', '#fakelink', remote: true,
                 data: { toggle: 'tab', href: following_user_path(@user) } %>
  </nav>
  <div class='tab-content'>
    <div class='contain clearfix talks'>
      <%= render @talks %>
    </div>
  </div>
</div>
