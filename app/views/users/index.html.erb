<header class='clearfix space-bottom'>
  <h3 class='col-xs-12'>Users</h3>
</header>

<table class='breathe'>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Email</th>
      <th>Admin</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.full_name, user_path(user) %>
        </td>
        <td>
          <%= user.username %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.admin? %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
